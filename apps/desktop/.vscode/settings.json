{
	"[javascript]": {
		"editor.formatOnSave": true,
		"editor.defaultFormatter": "biomejs.biome"
	},

	"[json]": {
		"editor.formatOnSave": true,
		"editor.defaultFormatter": "biomejs.biome"
	},

	"[typescript]": {
		"editor.formatOnSave": true,
		"editor.defaultFormatter": "biomejs.biome"
	},

	"[typescriptreact]": {
		"editor.formatOnSave": true,
		"editor.defaultFormatter": "biomejs.biome"
	},

	"[jsonc]": {
		"editor.formatOnSave": true,
		"editor.defaultFormatter": "biomejs.biome"
	},

	"biome.enabled": true,

	"editor.codeActionsOnSave": {
		"source.fixAll.biome": "explicit"
	},

	"editor.defaultFormatter": "biomejs.biome",

	"editor.quickSuggestions": {
		"strings": "on"
	},

	"files.associations": {
		"*.css": "tailwindcss"
	},

	"tailwindCSS.experimental.configFile": "src/renderer/globals.css"
}
