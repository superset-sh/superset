<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>
	<!-- Allow JIT compilation for JavaScript engine -->
	<key>com.apple.security.cs.allow-jit</key>
	<true/>

	<!-- Allow unsigned executable memory (required for some dev tools) -->
	<key>com.apple.security.cs.allow-unsigned-executable-memory</key>
	<true/>

	<!-- Disable library validation (allows loading various libraries) -->
	<key>com.apple.security.cs.disable-library-validation</key>
	<true/>

	<!-- Allow DYLD environment variables (for terminal functionality) -->
	<key>com.apple.security.cs.allow-dyld-environment-variables</key>
	<true/>

	<!-- Network access for git, updates, etc. -->
	<key>com.apple.security.network.client</key>
	<true/>
	<key>com.apple.security.network.server</key>
	<true/>

	<!-- Allow debugger (useful for development tools) -->
	<key>com.apple.security.cs.debugger</key>
	<true/>
</dict>
</plist>
