{
	"extends": "@superset/typescript/base.json",
	"compilerOptions": {
		"lib": ["ES2022"],
		"jsx": "react-jsx",
		"moduleResolution": "bundler",
		"baseUrl": ".",
		"paths": {
			"@/*": ["./src/*"]
		}
	},
	"include": [
		"src/**/*.ts",
		"src/**/*.tsx",
		"components/**/*.ts",
		"components/**/*.tsx",
		"emails/**/*.tsx"
	],
	"exclude": ["node_modules", "dist"]
}
